<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui_DatabaseApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui_DatabaseApp"
    xmlns:view="clr-namespace:Maui_DatabaseApp.View"
    Shell.FlyoutBehavior="Disabled">

    <FlyoutItem>
        <ShellContent Title="Festivals" ContentTemplate="{DataTemplate view:FestivalsMainPageView}"/>
        <ShellContent Title="Bin" ContentTemplate="{DataTemplate view:EquipmentPageView}"/>
    </FlyoutItem>
    <FlyoutItem>
        <ShellContent Title="Equipment" ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>

</Shell>
