<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_DatabaseApp.Controls.InternetConnectionControl"
             xmlns:localData ="clr-namespace:Maui_DatabaseApp.Controls"
             x:DataType="localData:InternetConnectionControl">

    <ContentView.ControlTemplate>
        <ControlTemplate>

            <Grid
            RowDefinitions="Auto,Auto"
            x:Name="InternetLostGrid">

                <Label 
                Grid.Row="0"
                Text="Connection Lost"                 
                HorizontalOptions="Center"
                />
                <Image
                Grid.Row="1"
                Source="connection_lost.png"
                HeightRequest="200"
                HorizontalOptions="Center"
                />

            </Grid>

        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
